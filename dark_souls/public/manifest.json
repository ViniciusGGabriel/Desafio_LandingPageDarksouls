{
  "manifest_version": 2,
  "name": "Landing Page Dark Souls",
  "version": "1.0",
  "description": "Uma extensão para fãs de Dark Souls.",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "DARK_SOULS.png",
      "48": "DARK_SOULS.png",
      "128": "DARK_SOULS.png"
    }
  },
  "background": {
    "scripts": ["DS1.jsx", "DS2.jsx", "DS3.jsx"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "web_accessible_resources": [
    "assets/DS1-BG.jpeg",
    "assets/DS2-BG.jpeg",
    "assets/DS3-BG.jpeg",
    "assets/souls_of_cinder.jpeg",
    "styles/index.css"
  ]
}
